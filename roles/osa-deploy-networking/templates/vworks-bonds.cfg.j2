auto {{att_bond0}}
  iface {{att_bond0}} inet static
    address {{att_bond0_ipaddr}}
    gateway {{att_host_gateway}}
    netmask {{att_bond0_submsk}}
    dns-nameservers {{att_host_namesrv}}
    dns-search {{att_host_sdomain}}
    # =-= Bonding Attributes =-=
    bond-mode balance-alb
    bond-miimon 100
    bond-slaves {{att_eth2}} {{att_eth3}}

auto {{att_bond1}}
  iface {{att_bond1}} inet manual
    bond-mode active-backup
    bond-miimon 100
    bond-slaves {{att_eth4}} {{att_eth6}}

auto {{att_bond2}}
  iface {{att_bond2}} inet manual
    bond-mode active-backup
    bond-miimon 100
    bond-slaves {{att_eth5}} {{att_eth7}}
