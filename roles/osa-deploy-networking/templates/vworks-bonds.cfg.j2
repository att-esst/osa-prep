auto {{vworks_bond0}}
  iface {{vworks_bond0}} inet static
    address {{vworks_bond0_ipaddr}}
    gateway {{vworks_host_gateway}}
    netmask {{vworks_bond0_submsk}}
    dns-nameservers {{vworks_host_namesrv}}
    dns-search {{vworks_host_sdomain}}
    # =-= Bonding Attributes =-=
    bond-mode balance-alb
    bond-miimon 100
    bond-slaves {{vworks_eth2}} {{vworks_eth3}}

auto {{vworks_bond1}}
  iface {{vworks_bond1}} inet manual
    bond-mode active-backup
    bond-miimon 100
    bond-slaves {{vworks_eth4}} {{vworks_eth6}}

auto {{vworks_bond2}}
  iface {{vworks_bond2}} inet manual
    bond-mode active-backup
    bond-miimon 100
    bond-slaves {{vworks_eth5}} {{vworks_eth7}}
